@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <h1><i class="bi bi-person-plus-fill"></i> Create Account</h1>
            <h2>Join BulkeyWeb today</h2>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Name" class="form-control" placeholder="" />
                        <label asp-for="Input.Name">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option value="">-- Select Role --</option>
                        </select>
                        <label asp-for="Input.Role">Role</label>
                    </div>
                    <div class="form-floating mb-2">
                        <select asp-for="Input.CompanyId" style="display: none;" asp-items="@Model.Input.CompanyList" class="form-select">
                            <option value="">-- Select Company --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    
                    <div class="form-floating mb-2">
                        <input asp-for="Input.StreetAddress" class="form-control" placeholder="" />
                        <label asp-for="Input.StreetAddress">Street Address</label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.City" class="form-control" placeholder="" />
                        <label asp-for="Input.City">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.State" class="form-control" placeholder="" />
                        <label asp-for="Input.State">State</label>
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.PostalCode" class="form-control" placeholder="" />
                        <label asp-for="Input.PostalCode">Postal Code</label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="" />
                        <label asp-for="Input.PhoneNumber">       Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-auth">
                <i class="bi bi-check-circle"></i> Create Account
            </button>
        </form>

        <div class="auth-links">
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                <i class="bi bi-box-arrow-in-right"></i> Already have an account? Sign in
            </a>
            <div class="mt-2">
                <h6 class="text-white">Register with other</h6>
                <div class="coming-soon">
                    Coming soon... <span><i class="bi bi-hourglass-split"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    /* Unified Auth Pages Style */
    .auth-page {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 20px;
    }

    .auth-container {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        padding: 1.5rem;
        color: white;
        width: 100%;
        max-width: 750px;
        animation: fadeIn 0.6s ease-in-out;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 1rem;
    }

        .auth-header h1 {
            font-weight: 700;
            color: #fff;
            font-size: 1.8rem;
            margin-bottom: 0.3rem;
        }

        .auth-header h2 {
            font-weight: 400;
            color: rgba(255, 255, 255, 0.9);
            font-size: 0.9rem;
        }

    .auth-form .form-control,
    .auth-form .form-select {
        background-color: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #fff;
        font-size: 0.85rem;
        border-radius: 8px;
        padding: 0.5rem 0.8rem;
        height: 38px;
    }

        .auth-form .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .auth-form .form-select option {
            color: #000 !important;
            background-color: white;
        }

        .auth-form .form-control:focus,
        .auth-form .form-select:focus {
            background-color: rgba(255, 255, 255, 0.25);
            border-color: #fff;
            box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.3);
            color: #fff;
        }

    .auth-form label {
        color: #f8f9fa;
        font-size: 0.8rem;
        font-weight: 500;
        margin-bottom: 0.2rem;
    }

    .auth-form .form-floating > label {
        padding: 0.4rem 0.8rem;
    }

    .btn-auth {
        background: linear-gradient(45deg, #28a745, #20c997);
        border: none;
        border-radius: 8px;
        padding: 0.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-top: 0.5rem;
        color: white;
    }

        .btn-auth:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
            background: linear-gradient(45deg, #20c997, #1e7e34);
            color: white;
        }

    .auth-links {
        margin-top: 1rem;
        text-align: center;
    }

    .auth-link {
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        display: block;
        margin: 0.3rem 0;
        padding: 0.3rem;
        border-radius: 6px;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.1);
        font-size: 0.85rem;
    }

        .auth-link:hover {
            color: #fff;
            background: rgba(255, 255, 255, 0.2);
            text-decoration: none;
            transform: translateX(5px);
        }

    .text-danger {
        color: #ffccd5 !important;
        font-size: 0.75rem;
        font-weight: 500;
        min-height: 1rem;
    }

    .validation-summary {
        background: rgba(255, 173, 173, 0.2);
        border: 1px solid rgba(255, 173, 173, 0.4);
        border-radius: 8px;
        padding: 0.5rem;
        margin-bottom: 0.5rem;
        font-size: 0.8rem;
    }

    .coming-soon {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        padding: 0.3rem 0.5rem;
        color: #fff;
        font-weight: 500;
        display: inline-block;
        margin-top: 0.3rem;
        font-size: 0.8rem;
    }

        .coming-soon span {
            font-style: italic;
            opacity: 0.8;
        }


    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

   

    .auth-form .form-control,
    .auth-form .form-select {
        font-size: 0.8rem;
        height: 36px;
    }

    .auth-form .form-floating > label {
        padding: 0.3rem 0.6rem;
    }

    .auth-header h1 {
        font-size: 1.5rem;
    }

    .auth-header h2 {
        font-size: 0.8rem;
    }

    .btn-auth {
        font-size: 0.9rem;
        padding: 0.4rem;
    }

    .auth-link {
        font-size: 0.8rem;
    }

    }
</style>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#Input_Role').change(function () {
                var selectedRole = $('#Input_Role option:selected').text();
                if (selectedRole === 'Company') {
                    $('#Input_CompanyId').show();
                } else {
                    $('#Input_CompanyId').hide();
                }
            });
        });
    </script>
}