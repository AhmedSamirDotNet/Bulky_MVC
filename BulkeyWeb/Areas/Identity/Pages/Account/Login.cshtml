@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <h1><i class="bi bi-box-arrow-in-right"></i> Welcome Back</h1>
            <h2>Sign in to your BulkeyWeb account</h2>
        </div>

        <section>
            <form id="account" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="auth-checkbox">
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-auth">
                        <i class="bi bi-lock-fill"></i> Sign In
                    </button>
                </div>

                <div class="auth-links">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="auth-link">
                        <i class="bi bi-key"></i> Forgot your password?
                    </a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                        <i class="bi bi-person-plus"></i> Create new account
                    </a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="auth-link">
                        <i class="bi bi-envelope"></i> Resend email confirmation
                    </a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}