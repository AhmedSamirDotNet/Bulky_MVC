@model IEnumerable<Bulky.Models.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Products</h2>
        <a asp-action="Upsert" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>

    <table id="tblData" class="table table-striped table-bordered text-center align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Category</th>
                <th>Price</th>
                <th>Description</th>
                <th width="150px">Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet"
          href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>

    <script>
        let dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                ajax: {
                    url: '/Admin/Product/GetAll'
                },
                columns: [
                    {
                        data: 'imageUrl',
                        render: function (data) {
                            return `<img src="${data}" alt="Product Image" class="rounded" width="60" height="60" />`;
                        }
                    },
                    { data: 'title' },
                    { data: 'category.name' },
                    {
                        data: 'price',
                        render: function (data) {
                            return `$${data.toFixed(2)}`;
                        }
                    },
                    {
                        data: 'description',
                        render: function (data) {
                            return data && data.length > 50 ?
                                data.substring(0, 50) + '...' :
                                data;
                        }
                    },
                    {
                        data: 'id',
                        render: function (data, type, row) {
                            return `
                                <div class="btn-group" role="group">
                                    <a href="/Admin/Product/Upsert/${data}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="/Admin/Product/Deleteث/${data}" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>`;
                        }
                    }
                ]
            });
        }
    </script>
}