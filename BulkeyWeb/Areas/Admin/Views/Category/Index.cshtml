@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <h2 class="text-white text-center mb-0">Category List</h2>
    </div>

    <div class="card-body p-4">
        <div class="mb-3 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th style="width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.DisplayOrder</td>
                        <td>
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-primary btn-sm mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger btn-sm mx-1">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
