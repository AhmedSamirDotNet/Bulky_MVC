@model Bulky.Models.Models.Product

<div class="card shadow-lg border-0 rounded-3 mt-4 pb-5">
    <div class="card-header bg-gradient bg-primary text-white text-center py-3">
        <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Edit Product</h2>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-action="Edit" asp-controller="Product">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Title -->
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control shadow-sm" placeholder="Enter Title" />
                <label asp-for="Title"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control shadow-sm" style="height: 120px;" placeholder="Enter Description"></textarea>
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- ISBN -->
            <div class="form-floating mb-3">
                <input asp-for="ISBN" class="form-control shadow-sm" placeholder="Enter ISBN" />
                <label asp-for="ISBN"></label>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <!-- Author -->
            <div class="form-floating mb-3">
                <input asp-for="Author" class="form-control shadow-sm" placeholder="Enter Author" />
                <label asp-for="Author"></label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <!-- List Price -->
            <div class="form-floating mb-3">
                <input asp-for="ListPrice" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter List Price" />
                <label asp-for="ListPrice"></label>
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>

            <!-- Price (1-50) -->
            <div class="form-floating mb-3">
                <input asp-for="Price" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter Price for 1-50" />
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Price (51-100) -->
            <div class="form-floating mb-3">
                <input asp-for="Price50" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter Price for +50" />
                <label asp-for="Price50"></label>
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>

            <!-- Price (+100) -->
            <div class="form-floating mb-3">
                <input asp-for="Price100" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter Price for +100" />
                <label asp-for="Price100"></label>
                <span asp-validation-for="Price100" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success btn-lg px-5 shadow">
                    <i class="bi bi-check-circle-fill me-2"></i> Save Changes
                </button>
                <a asp-controller="Product" asp-action="Index"
                   class="btn btn-outline-secondary btn-lg px-5 shadow">
                    <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        padding-bottom: 90px; /* عشان يسيب مساحة تحت للفوتر */
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
