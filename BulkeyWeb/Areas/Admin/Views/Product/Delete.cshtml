@model Bulky.Models.Models.Product

<div class="card shadow-lg border-0 rounded-3 mt-4 pb-5">
    <div class="card-header bg-gradient bg-danger text-white text-center py-3">
        <h2 class="mb-0"><i class="bi bi-trash-fill me-2"></i> Delete Product</h2>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-action="Delete" asp-controller="Product">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Title -->
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control shadow-sm" disabled />
                <label asp-for="Title"></label>
            </div>

            <!-- ISBN -->
            <div class="form-floating mb-3">
                <input asp-for="ISBN" class="form-control shadow-sm" disabled />
                <label asp-for="ISBN"></label>
            </div>

            <!-- Author -->
            <div class="form-floating mb-3">
                <input asp-for="Author" class="form-control shadow-sm" disabled />
                <label asp-for="Author"></label>
            </div>

            <!-- List Price -->
            <div class="form-floating mb-3">
                <input asp-for="ListPrice" class="form-control shadow-sm" disabled />
                <label asp-for="ListPrice"></label>
            </div>

            <!-- Price (1-50) -->
            <div class="form-floating mb-3">
                <input asp-for="Price" class="form-control shadow-sm" disabled />
                <label asp-for="Price"></label>
            </div>

            <!-- Price (51-100) -->
            <div class="form-floating mb-3">
                <input asp-for="Price50" class="form-control shadow-sm" disabled />
                <label asp-for="Price50"></label>
            </div>

            <!-- Price (+100) -->
            <div class="form-floating mb-3">
                <input asp-for="Price100" class="form-control shadow-sm" disabled />
                <label asp-for="Price100"></label>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-danger btn-lg px-5 shadow">
                    <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                </button>
                <a asp-controller="Product" asp-action="Index"
                   class="btn btn-outline-secondary btn-lg px-5 shadow">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        padding-bottom: 90px; /* عشان يسيب مساحة تحت للفوتر أو الناف بار */
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
