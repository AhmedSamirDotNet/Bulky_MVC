@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <!-- Header with Search -->
    <div class="row mb-5 align-items-center">
        <div class="col-12 col-md-6">
            <h1 class="h2 fw-bold text-dark">Our Books Collection</h1>
            <p class="text-muted">Explore our curated selection of books across all genres</p>
        </div>
        <div class="col-12 col-md-6">
            <div class="input-group shadow-sm rounded-pill overflow-hidden">
                <input type="text" class="form-control border-0 py-3" placeholder="Search books by title or author..." aria-label="Search books">
                <button class="btn btn-primary px-4" type="button">
                    <i class="bi bi-search me-2"></i>Search
                </button>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold text-dark">Category</label>
                            <select class="form-select border-0 shadow-sm">
                                <option>All Categories</option>
                                <option>Fiction</option>
                                <option>Non-Fiction</option>
                                <option>Science</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold text-dark">Price Range</label>
                            <select class="form-select border-0 shadow-sm">
                                <option>All Prices</option>
                                <option>Under $10</option>
                                <option>$10 - $25</option>
                                <option>Over $25</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold text-dark">Author</label>
                            <select class="form-select border-0 shadow-sm">
                                <option>All Authors</option>
                                <option>Author 1</option>
                                <option>Author 2</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold text-dark">Sort By</label>
                            <select class="form-select border-0 shadow-sm">
                                <option>Newest</option>
                                <option>Price: Low to High</option>
                                <option>Price: High to Low</option>
                                <option>Title A-Z</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Books Grid -->
    <div class="row g-4" id="productsContainer">
        @foreach (var product in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm product-card rounded-3 overflow-hidden">
                    <!-- Image -->
                    <div class="position-relative">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" style="height: 250px; object-fit: cover;">
                        @if (product.ListPrice > product.Price100)
                        {
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-danger rounded-pill">
                                    @(((product.ListPrice - product.Price100) / product.ListPrice * 100).ToString("0"))% OFF
                                </span>
                            </div>
                        }
                    </div>
                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column p-4">
                        <!-- Category Badge -->
                        <span class="badge bg-primary mb-2 w-fit-content">@product.Category?.Name</span>
                        <!-- Title -->
                        <h5 class="card-title fw-bold text-dark mb-2 text-truncate">@product.Title</h5>
                        <!-- Author -->
                        <p class="card-text text-muted small mb-3">
                            <i class="bi bi-person me-1"></i>@product.Author
                        </p>
                        <!-- Pricing -->
                        <div class="mb-3">
                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                @if (product.ListPrice > product.Price100)
                                {
                                    <span class="text-decoration-line-through text-muted small">
                                        $@product.ListPrice.ToString("0.00")
                                    </span>
                                }
                                <span class="h5 fw-bold text-primary mb-0">
                                    $@product.Price100.ToString("0.00")
                                </span>
                                <span class="badge bg-success small">Bulk Price</span>
                            </div>
                        </div>
                        <!-- View Details Button -->
                        <div class="mt-auto">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-primary w-100 rounded-pill">
                                <i class="bi bi-eye me-1"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="row mt-5">
        <div class="col-12">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center gap-1">
                    <li class="page-item disabled">
                        <a class="page-link rounded-pill px-3" href="#">Previous</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link rounded-pill px-3" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link rounded-pill px-3" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link rounded-pill px-3" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link rounded-pill px-3" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: white;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1) !important;
        }

    .card-img-top {
        border-bottom: 1px solid #e9ecef;
    }

    .card-title {
        font-size: 1.1rem;
        line-height: 1.4;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.4em 0.8em;
    }

    .btn-primary {
        background: linear-gradient(45deg, #007bff, #00aaff);
        border: none;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #0056b3, #007bff);
        }

    .form-select, .form-control {
        background-color: #fff;
        border-radius: 8px;
        padding: 0.75rem;
    }

    .input-group {
        transition: box-shadow 0.3s ease;
    }

        .input-group:focus-within {
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.2);
        }

    .pagination .page-link {
        color: #007bff;
        border: none;
        margin: 0 0.25rem;
        transition: background 0.3s ease;
    }

        .pagination .page-link:hover {
            background: #e9ecef;
        }

    .pagination .active .page-link {
        background: #007bff;
        color: white;
    }

    .w-fit-content {
        width: fit-content;
    }

    
    .card-title {
        font-size: 1rem;
    }

    .btn-primary {
        font-size: 0.9rem;
    }

    .form-select, .form-control {
        font-size: 0.9rem;
        padding: 0.5rem;
    }

    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Basic search functionality (client-side example)
        $(document).ready(function () {
            $('.form-control').on('input', function () {
                let searchTerm = $(this).val().toLowerCase();
                $('#productsContainer .product-card').each(function () {
                    let title = $(this).find('.card-title').text().toLowerCase();
                    let author = $(this).find('.card-text').text().toLowerCase();
                    if (title.includes(searchTerm) || author.includes(searchTerm)) {
                        $(this).parent().show();
                    } else {
                        $(this).parent().hide();
                    }
                });
            });

            // Basic filter functionality (client-side example)
            $('.form-select').on('change', function () {
                // Add AJAX or server-side filtering logic here
                console.log('Filter changed:', $(this).val());
            });
        });
    </script>
}