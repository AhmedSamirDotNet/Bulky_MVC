@model Bulky.Models.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-3 rounded-3 shadow-sm">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <!-- Product Details -->
    <div class="row g-4">
        <!-- Product Image -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
                <img src="@Model.ImageUrl" class="img-fluid w-100" alt="@Model.Title" style="object-fit: cover; max-height: 500px;">
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body p-4 d-flex flex-column">
                    <h2 class="fw-bold text-dark mb-3">@Model.Title</h2>
                    <span class="badge bg-primary w-fit-content mb-3">@Model.Category.Name</span>
                    <p class="text-muted mb-3">
                        <i class="bi bi-person me-1"></i> <strong>Author:</strong> @Model.Author
                    </p>
                    <p class="text-muted mb-3">
                        <i class="bi bi-book me-1"></i> <strong>ISBN:</strong> @Model.ISBN
                    </p>
                    <p class="text-muted mb-4">
                        <i class="bi bi-file-text me-1"></i> <strong>Description:</strong>
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <span>No description available.</span>
                        }
                        else
                        {
                            @Model.Description
                        }
                    </p>

                    <!-- Pricing -->
                    <div class="mb-4">
                        <h5 class="fw-semibold text-dark">Pricing</h5>
                        <div class="d-flex flex-wrap gap-3 align-items-center">
                            <div>
                                <span class="text-muted small">List Price:</span>
                                <span class="h6 fw-bold text-primary">$@Model.ListPrice.ToString("0.00")</span>
                            </div>
                            <div>
                                <span class="text-muted small">1-50 Units:</span>
                                <span class="h6 fw-bold text-success">$@Model.Price.ToString("0.00")</span>
                            </div>
                            <div>
                                <span class="text-muted small">51-100 Units:</span>
                                <span class="h6 fw-bold text-success">$@Model.Price50.ToString("0.00")</span>
                            </div>
                            <div>
                                <span class="text-muted small">100+ Units:</span>
                                <span class="h6 fw-bold text-success">$@Model.Price100.ToString("0.00")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Discount Badge -->
                    @if (Model.ListPrice > Model.Price100)
                    {
                        <div class="mb-4">
                            <span class="badge bg-danger rounded-pill">
                                Save @(((Model.ListPrice - Model.Price100) / Model.ListPrice * 100).ToString("0"))% on 100+ units
                            </span>
                        </div>
                    }

                    <!-- Actions -->
                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="bi bi-arrow-left me-1"></i>Back to Products
                        </a>
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill">
                            <i class="bi bi-pencil-square me-1"></i>Edit Product
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1) !important;
        }

    .img-fluid {
        border-radius: 12px;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 1em;
    }

    .btn-primary {
        background: linear-gradient(45deg, #007bff, #00aaff);
        border: none;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #0056b3, #007bff);
        }

    .btn-outline-secondary {
        transition: background 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: #e9ecef;
        }

    .breadcrumb {
        background-color: #ffffff;
    }

    .breadcrumb-item a {
        color: #007bff;
        text-decoration: none;
    }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

    .w-fit-content {
        width: fit-content;
    }

    
    

    h2 {
        font-size: 1.5rem;
    }

    .btn {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }

    .badge {
        font-size: 0.8rem;
    }

    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}