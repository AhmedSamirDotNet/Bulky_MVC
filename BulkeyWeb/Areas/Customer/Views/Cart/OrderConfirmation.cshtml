@model int

<form method="post" asp-action="OrderConfirmation" asp-controller="Cart">
    <br />
    <div class="container">
        <div class="card shadow border-0">

            <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
                <div class="row px-4">
                    <div class="col-6">
                        <h5 class="pt-2 text-white">
                            Order Confirmation
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h4 class="text-success">Thank you for your order!</h4>
                            <p>Your order number is <strong>#@Model</strong>.</p>
                            <img src="~/images/images.jpg" alt="Thank You" width="65%" />
                            <br /><br />
                            <p>We appreciate your business and hope you enjoy your purchase.</p>
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Return to Home</a>
                        </div>
                        <div class="col-12 col-lg-6 pb-4">
                            Your order has been successfully <br/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>