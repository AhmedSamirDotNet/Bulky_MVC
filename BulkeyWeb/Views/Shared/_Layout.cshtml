@*
    Enhanced Layout for BulkeyWeb
    - Fixed all CDN issues
    - Added responsive, modern Bootstrap navbar
    - Clean footer
    - Ready for Toastr & DataTables integration
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BulkeyWeb</title>

    <!-- 🧩 Bootstrap Core -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>   <!-- First -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 🧩 Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BulkeyWeb.styles.css" asp-append-version="true" />

    <!-- 🧩 Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />

    <!-- 🧩 Toastr Notifications -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMd8zFf7hQG+gK6Y4dM2x9Uo0L1Z5MBEiqyS34vK4U9b2yA1cxGJKmSM08bxTj4EZnL3Ej6CYOyC+z0Kz8JHw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- 🧩 DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />

    <style>
        /* 🌈 Enhanced UI Styling */
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        footer {
            padding: 10px 0;
            color: #fff;
            font-weight: 500;
        }

        .footer i {
            color: #ffccd5;
        }

        .dropdown-menu {
            border-radius: 0.75rem;
        }

        main {
            animation: fadeIn 0.4s ease-in-out;
        }

       

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <!-- 🔹 Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag-heart"></i> BulkeyWeb
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">                               
                                    <i class="bi bi-gear"></i> Content Management
                                </a>
                                <ul class="dropdown-menu shadow-sm">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index"><i class="bi bi-folder2"></i> Categories</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index"><i class="bi bi-box2-heart"></i> Products</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- 🔹 Login Partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- 🔹 Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-4">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <!-- 🔹 Footer -->
    <footer class="footer bg-primary text-center mt-auto">
        <div class="container">
            Made with <i class="bi bi-heart-fill"></i> by <strong>Ahmed Samir</strong>
        </div>
    </footer>

    <!-- 🔹 Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-bTuyR8O1dTccDqPhKJhmC1Zl3VgBBH7X3L9yO0IfQ2K8Yk+1my7kK2Lh9Y6zYo/vJmupF0HPiOmZrZa4/4FntA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- 🔹 Toastr Auto Config -->
    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-bottom-right",
            "timeOut": "4000"
        };
    </script>
</body>
</html>
