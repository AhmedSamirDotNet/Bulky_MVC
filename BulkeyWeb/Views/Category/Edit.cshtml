@model Category


<form method="post" asp-action="Edit" asp-controller="Category">
	<div class="border pt-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="ModelOnly"></div>
		<div class="mb-3 row p-1">
			<label class="p-0">Name</label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" type="text" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Edit</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border form-control">
					Back To List
				</a>
			</div>
		</div>

	</div>
</form>
<!--Applies Validation on the Client side based on asp-Validation-for and the DataAnnotations related to the model->

@section Scripts {
	@{
				<partial name="_ValidationScriptsPartial"/>
	}
}
